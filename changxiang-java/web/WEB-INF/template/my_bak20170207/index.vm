    </div>
</section >
<div class="latelyOrder grayBorder mt10">
	<h2 class="tit">最近认购</h2>
	<table class="tableData">
        <colgroup>
            <col width="18%">
            <col width="12%">
            <col width="11%">
            <col width="12%">
            <col width="10%">
            <col width="10%">
            <col width="9%">
